<%= form_with(model: @micropost, local: true) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field form-group">
    <%= f.text_area :content, placeholder: "Compose new micropost", class: "form-control", rows: "5" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary btn-create" %>
  <span class="picture">
    <%= f.file_field :picture, accept: "image/jpeg, image/gif, image/png", onchange: "validateSize(this)" %>
  </span>
<% end %>

<script type="text/javascript">
  function validateSize(element) {
    var size_in_megabytes = element.files[0].size / 1024 / 1024;
    if (size_in_megabytes > 5) {
      alert("Maximum file size is 5MB. Please choose a smaller file.");
    }
  }
</script>