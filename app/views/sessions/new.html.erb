<%= provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 sign-up">
    <%= form_with(url: login_path, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email : " %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password : " %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div>
        <%= f.check_box :remember_me, class: "inline" %>
        <%= f.label :remember_me, "Remember me on this computer", class: "checkbox inline" %>
      </div>
      <%= f.submit "Log in", class: "btn btn-primary btn-create" %>
    <% end %>
    <br>
    <p>
      New user? <%= link_to("Sign up now!", signup_path) %>
    </p>
    <p>
      Forgot password? <%= link_to("Reset password", new_password_reset_path) %>
    </p>
  </div>
</div>
